<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Frame for the image -->

    <!-- Dashboard popup menu style -->
    <style name="PopupMenuItemStyle">
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- Navigation menu style -->
    <style name="PopupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/pop_up_background</item>
        <item name="android:itemTextAppearance">@style/PopupMenuItemStyle</item>
    </style>

    <!-- Custom style for Dropdown Menu Style -->
    <style name="Widget.Material3.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu">
        <item name= "android:background">@drawable/dropdown_background</item>
    </style>

    <!-- Custom style for TextInputLayout -->

    <!-- Custom style for TextInputEditText -->

    <!-- Custom style for TextInputLayoutHint -->

    <!-- to Centralize the hint text and hint color -->
    <style name="CenteredHintEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColorHint">@color/grey</item>
    </style>

    <!-- to set the hint color -->
    <style name="Hint">
        <item name="android:textColorHint">@color/grey</item>
    </style>

    <!--Enrolment style-->
    <style name="Enrollment">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">sans-serif</item>
    </style>


</resources>
